{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "debug",
      "node"
    ],
    "declaration": true,
    "lib": [
      "es6",
      "es2017",
      "esnext"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
